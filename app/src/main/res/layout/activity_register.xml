<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:isScrollContainer="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_170sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logo" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:text="@string/let_s_get_started"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/create_a_new_account"
                        android:textColor="@color/light_blue_1"
                        android:textSize="@dimen/_11ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/_20sdp"
                        android:paddingTop="@dimen/_15sdp"
                        android:paddingRight="@dimen/_20sdp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/rounded_editext_border">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgUser"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/ic_name" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtFullName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@id/imgUser"
                                android:layout_toRightOf="@id/imgUser"
                                android:textColor="@color/light_blue_1"
                                android:background="@null"
                                android:singleLine="true"
                                android:hint="@string/full_name"
                                android:textColorHint="@color/light_blue_1"
                                android:textSize="@dimen/_12ssp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext_border">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgDob"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/ic_dob" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtDob"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@id/imgDob"
                                android:layout_toRightOf="@id/imgDob"
                                android:background="@null"
                                android:hint="@string/dob"
                                android:clickable="true"
                                android:textColor="@color/light_blue_1"
                                android:focusable="false"
                                android:singleLine="true"
                                android:textColorHint="@color/light_blue_1"
                                android:textSize="@dimen/_12ssp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext_border">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgEmail"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="match_parent"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/ic_mail" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@id/imgEmail"
                                android:layout_toRightOf="@+id/imgEmail"
                                android:background="@null"
                                android:hint="@string/email"
                                android:textColor="@color/light_blue_1"
                                android:singleLine="true"
                                android:textColorHint="@color/light_blue_1"
                                android:textSize="@dimen/_12ssp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext_border">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/imgPassword"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/ic_password" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@id/imgPassword"
                                android:layout_toRightOf="@id/imgPassword"
                                android:background="@null"
                                android:singleLine="true"
                                android:hint="@string/password"
                                android:textColor="@color/light_blue_1"
                                android:inputType="textPassword"
                                android:textColorHint="@color/light_blue_1"
                                android:textSize="@dimen/_12ssp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/rounded_editext_border">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/username_icon"
                                android:layout_width="@dimen/_36sdp"
                                android:layout_height="match_parent"
                                android:padding="@dimen/_10sdp"
                                android:src="@drawable/ic_password" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/edtReEnterPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toEndOf="@id/username_icon"
                                android:layout_toRightOf="@+id/username_icon"
                                android:background="@null"
                                android:hint="@string/password_again"
                                android:singleLine="true"
                                android:inputType="textPassword"
                                android:textColor="@color/light_blue_1"
                                android:textColorHint="@color/light_blue_1"
                                android:textSize="@dimen/_12ssp" />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnRegister"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            app:cornerRadius="@dimen/_20sdp"
                            android:backgroundTint="@color/red"
                            android:background="@drawable/rounded_button"
                            android:fontFamily="@font/montserrat_semibold"
                            android:onClick="registerUser"
                            android:text="@string/sign_up"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12ssp"
                            tools:targetApi="lollipop" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/have_an_account"
                        android:textColor="@color/light_blue_1" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:onClick="redirectToLogin"
                        android:text="@string/sign_in"
                        android:textColor="@color/red" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTint="@color/red"
            android:indeterminateTintMode="src_atop"
            android:visibility="gone"
            tools:targetApi="lollipop" />

    </RelativeLayout>


</layout>
