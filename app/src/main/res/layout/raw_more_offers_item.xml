<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/imgCartItem"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="1"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/text_circle_red_bg"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgCartItem"
            android:layout_toEndOf="@id/imgCartItem"
            android:paddingTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_toLeftOf="@id/txtDiscount"
                android:textSize="@dimen/_11ssp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Buy 3 kurtis for Rs 1999"
                android:layout_toStartOf="@id/txtDiscount" />


            <TextView
                android:id="@+id/txtDiscount"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:text="20% Off"
                android:textColor="@color/red"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/txtColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_eligible_products"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/txtTitle"
                android:textColor="@color/red"/>


        </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
