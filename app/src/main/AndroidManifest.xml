<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.techmate.woocommerce">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.WooCommerceApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoFullScreenTheme"
        tools:ignore="AllowBackup">
        <activity android:name=".ui.AllOccasionWearActivity"/>
        <activity android:name=".ui.AllFlashSaleActivity" />
        <activity android:name=".ui.AllTrendingProductListing" />
        <activity android:name=".ui.FilterActivity" />
        <activity android:name=".ui.ProfileActivity" />
        <activity android:name=".ui.NotificationActivity" />
        <activity android:name=".ui.OrderDetailActivity" />
        <activity android:name=".ui.OrderListActivity" />
        <activity
            android:name=".ui.AddShippingAddressActivity"
            android:theme="@style/MaterialTheme" />
        <activity android:name=".ui.ShipToActivity" />
        <activity android:name=".ui.CategoryDetailActivity" />
        <activity android:name=".ui.ProductDetailActivity" />
        <activity android:name=".ui.CartActivity" />
        <activity
            android:name=".ui.ForgotPasswordActivity"
            android:theme="@style/Theme.WooCommerce"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.LoginActivity"
            android:theme="@style/Theme.WooCommerce"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.RegisterActivity"
            android:theme="@style/Theme.WooCommerce"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/Theme.WooCommerce">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
        <activity
            android:name=".ui.HomeActivity"
            android:theme="@style/NoFullScreenTheme">



        </activity>

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

    </application>

</manifest>